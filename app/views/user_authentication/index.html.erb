<div>
  <div>
    <h1>
      All Students
    </h1>
  </div>
</div>
<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Name
        </th>

        <th>
        Details
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>

        <td>
          <%= a_user.first_name %> <%= a_user.last_name %>
        </td>


        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
