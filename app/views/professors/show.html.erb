<div>
  <div>
    <h1>
      Professor #<%= @the_professor.id %> details
    </h1>

    <div>
      <div>
        <a href="/professors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_professor/<%= @the_professor.id %>">
          Delete professor
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_professor.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_professor.last_name %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_professor.email %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_professor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_professor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit professor
    </h2>

    <form action="/modify_professor/<%= @the_professor.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_professor.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_professor.last_name %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @the_professor.email %>">
      </div>

      <button>
        Update professor
      </button>
    </form>
  </div>
</div>

<hr>
