<div>
  <div>
    <h1>
      List of all professors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new professor
    </h2>

    <form action="/insert_professor" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="bio_box">
          Link to Bio
        </label>

        <input type="text" id="bio_box" name="query_bio">
      </div>

      <button>
        Create professor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Name
        </th>

        <th>
          Link to Bio
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_professors.each do |a_professor| %>
      <tr>

        <td>
          <%= a_professor.first_name %> <%= a_professor.last_name %>
        </td>

        <td>
          <a href="<%= a_professor.bio %>">
            Bio
          </a>
        </td>

        <td>
          <a href="/professors/<%= a_professor.id %>">
            Details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
